{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "lib/**",
        "build/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "test:run": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "sync:models": {
      "cache": false,
      "outputs": [
        "packages/models/src/providers/**",
        "packages/models/src/index.ts"
      ]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
